{
  "name": "shadow-alm",
  "version": "1.0.0",
  "description": "Automated Liquidity Manager for Shadow DEX on Sonic",
  "scripts": {
    "compile": "forge build",
    "test": "forge test",
    "deploy": "forge script script/Deploy.s.sol --rpc-url sonic --broadcast --verify",
    "backend": "pnpm --filter backend start",
    "frontend": "pnpm --filter frontend dev",
    "dev": "concurrently \"pnpm run backend\" \"pnpm run frontend\""
  },
  "devDependencies": {
    "ethers": "^6.9.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
